packages:
  yum:
    postgresql93-devel: []

option_settings:
  - option_name:  APP_SETTINGS
    value:  config.DevelopmentConfig
  - option_name: DATABASE_URL
    value: postgresql://postgres:postgres@localhost:5432/wordcount_dev

commands:
  test_command:
    command: echo "ebextensions ran" > success

container_commands:
  collectstatic:
    command: "python manage.py db init"
  01syncdb:
    command: "python manage.py db migrate"
    leader_only: true
  02migrate:
    command: "python manage.py db upgrade"
    leader_only: true